@model CarCrash
@using Microsoft.AspNetCore.Authorization

<div class="card card-outline-primary m-1 p-1 font-weight-bolder">

    <div class="p-1">
        <h4>Crash ID: @Model.crash_id</h4>

        <span class="badge badge-primary" style="float:right">
            Severity: @Model.crash_severity_id
        </span>
    </div>

    <ul>
        <li class="text-lg-left">City: @Model.city</li>
        <li class="text-lg-left">County: @Model.county_name</li>
        <li class="text-lg-left">Date: @Model.crash_date.Month/@Model.crash_date.Day/@Model.crash_date.Year</li>
    </ul>

    @if (User.Identity.IsAuthenticated == true)
    {
        <a asp-controller="Home" asp-action="Details" asp-route-fieldid="@Model.Field1">Details</a>
        <a asp-controller="Home" asp-action="EditCrash" asp-route-fieldid="@Model.Field1">Edit</a>
        <a asp-controller="Home" asp-action="Delete" asp-route-fieldid="@Model.Field1">Delete</a>
    }

</div>
